{
  "openapi": "3.0.0",
  "info": {
    "title": "MyContacts API",
    "version": "1.0.0",
    "description": "API de gestion des utilisateurs avec authentification JWT"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Serveur local"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "summary": "Créer un utilisateur",
        "tags": ["Authentification"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["firstName", "email", "password"],
                "properties": {
                  "firstName": { "type": "string" },
                  "email": { "type": "string" },
                  "password": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Utilisateur créé avec succès"
          },
          "400": {
            "description": "Utilisateur déjà existant ou champs manquants"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Connexion utilisateur",
        "tags": ["Authentification"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": { "type": "string" },
                  "password": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Connexion réussie",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": { "type": "string" }
                  }
                }
              }
            }
          },
          "401": { "description": "Mot de passe incorrect" },
          "400": { "description": "Utilisateur inexistant" }
        }
      }
    },
    "/users": {
      "get": {
        "summary": "Récupère la liste des utilisateurs (protégé)",
        "tags": ["Utilisateurs"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Liste des utilisateurs",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "_id": { "type": "string" },
                      "firstName": { "type": "string" },
                      "email": { "type": "string" },
                      "createdAt": { "type": "string", "format": "date-time" }
                    }
                  }
                }
              }
            }
          },
          "401": { "description": "Token manquant ou invalide" }
        }
      }
    }
  }
}
